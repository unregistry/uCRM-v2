{
  "name": "suitecrm/suitecrm",
  "description": "SuiteCRM",
  "homepage": "https://suitecrm.com",
  "type": "project",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "SuiteCRM Ltd"
    }
  ],
  "support": {
    "issues": "https://github.com/suitecrm/SuiteCRM/issues",
    "wiki": "https://docs.suitecrm.com",
    "forum": "https://community.suitecrm.com",
    "source": "https://github.com/suitecrm/SuiteCRM"
  },
  "config": {
    "vendor-dir": "vendor",
    "platform": {
      "php": "8.1.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "wikimedia/composer-merge-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "suggest": {
    "ext-imap": "Needed for emails module"
  },
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-zip": "*",
    "consolidation/log": "^3.1",
    "consolidation/robo": "^4.0",
    "elasticsearch/elasticsearch": "^7.13",
    "ezyang/htmlpurifier": "^4.10",
    "google/apiclient": "^2.18",
    "google/recaptcha": "^1.3",
    "gymadarasz/ace": "^1.2",
    "gymadarasz/imagesloaded": "^4.1",
    "javanile/php-imap2": "^0.1.10",
    "justinrainbow/json-schema": "^6",
    "league/oauth2-client": "^2.6",
    "league/oauth2-server": "^8.5",
    "monolog/monolog": "^3",
    "nesbot/carbon": "^3",
    "onelogin/php-saml": "^4",
    "phpmailer/phpmailer": "^6.0",
    "psr/container": "^1.0",
    "psr/log": "^3.0",
    "slim/slim": "^3.8",
    "smarty/smarty": "^4",
    "soundasleep/html2text": "^2",
    "symfony/options-resolver": "^6.4",
    "symfony/polyfill-uuid": "^1.32",
    "symfony/validator": "^6.4",
    "symfony/yaml": "^6.4",
    "tecnickcom/tcpdf": "^6.10",
    "tedivm/jshrink": "^1.3",
    "tinymce/tinymce": "^8",
    "voku/anti-xss": "^4.0",
    "wikimedia/composer-merge-plugin": "^2.0",
    "zbateson/mail-mime-parser": "^2.4",
    "zf1s/zend-oauth": "^1.15",
    "zf1s/zend-search-lucene": "^1.15"
  },
  "require-dev": {
    "browserstack/browserstack-local": "^1.1",
    "codeception/codeception": "^5.2",
    "codeception/lib-innerbrowser": "^4",
    "codeception/module-asserts": "^3.1",
    "codeception/module-filesystem": "^3.0",
    "codeception/module-phpbrowser": "^3.0",
    "codeception/module-rest": "^3.4",
    "codeception/module-webdriver": "^4",
    "fakerphp/faker": "^1.14",
    "filp/whoops": "^2.3",
    "flow/jsonpath": "^0.4",
    "friendsofphp/php-cs-fixer": "^3.90",
    "jeroendesloovere/vcard": "^1.7",
    "mikey179/vfsstream": "1.6.*",
    "mockery/mockery": "^1.1.0",
    "phpunit/phpunit": "^10.5",
    "scssphp/scssphp": "^1.5",
    "vlucas/phpdotenv": "^5.5"
  },
  "autoload": {
    "files": [
      "deprecated.php"
    ],
    "psr-4": {
      "SuiteCRM\\": [
        "lib/",
        "include/"
      ],
      "SuiteCRM\\Custom\\": [
        "custom/lib"
      ],
      "SuiteCRM\\Modules\\": [
        "modules/"
      ]
    },
    "classmap": [
      "Api/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "SuiteCRM\\": [
        "tests/SuiteCRM/",
        "tests/unit/phpunit/lib/SuiteCRM/"
      ],
      "SuiteCRM\\Tests\\Unit\\": [
        "tests/unit/phpunit/"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Google\\Task\\Composer::cleanup"
    ]
  },
  "extra": {
    "google/apiclient-services": [
      "Calendar"
    ],
    "merge-plugin": {
      "include": [
        "composer.ext.json",
        "custom/Extension/application/Ext/Composer/*/*.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  }
}
